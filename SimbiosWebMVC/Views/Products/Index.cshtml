@model ProductListViewModel

<div class="container mt-5">
    <h2 class="text-center mb-4">Категорії мультфільмів</h2>



	@await Html.PartialAsync("_ProductSearchItem", Model.Search)

	<div class="alert alert-primary mt-2" role="alert">
		Кількість елементів: <strong>@Model.Count</strong>
	</div>

	@await Html.PartialAsync("_ListProductItems", Model.Products)
	@await Html.PartialAsync("_PaginationSelector", Model.Pagination)
</div>

