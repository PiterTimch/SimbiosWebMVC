@model ProfileViewModel

<div class="container mt-5 d-flex justify-content-center">
    <div class="d-flex flex-column align-items-center">
        <img src="@(string.IsNullOrEmpty(Model.Image) ? "/StandartImages/default.webp" : $"/images/400_{Model.Image}")"
             alt="@Model.FullName"
             class="rounded-circle border border-primary shadow-sm"
             style="width: 300px; height: 300px; object-fit: cover;" />

        <h2 class="mt-4">@Model.FullName</h2>
        <p class="text-muted fs-5">@Model.Email</p>

        @using (Html.BeginForm("Logout", "Account", FormMethod.Post))
        {
            <button class="btn btn-dark mt-3">Вихід</button>
        }
    </div>
</div>
