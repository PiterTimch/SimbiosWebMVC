@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminPanelLayout.cshtml";
}

@model List<SimbiosWebMVC.Areas.Admin.Models.User.UserItemViewModel>

<div class="container mt-4">
    <h2 class="mb-4">Список користувачів</h2>

    <div class="table-responsive">
        <table class="table table-bordered table-hover align-middle shadow-sm">
            <thead class="table-dark text-center">
                <tr>
                    <th scope="col">Фото</th>
                    <th scope="col">Логін</th>
                    <th scope="col">Ім'я</th>
                    <th scope="col">Прізвище</th>
                    <th scope="col">Email</th>
                    <th scope="col">Дії</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr class="text-center">
                        <td>
                            <img src="@(string.IsNullOrEmpty(user.Image) ? "/StandartImages/default.webp" : $"/images/50_{user.Image}")"
                                 alt="@user.UserName"
                                 class="rounded-circle border border-secondary shadow-sm"
                                 style="width: 40px; height: 40px; object-fit: cover;" />
                        </td>
                        <td>@user.UserName</td>
                        <td>@user.FirstName</td>
                        <td>@user.LastName</td>
                        <td>@user.Email</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a href="#" class="btn btn-sm btn-outline-primary">Редагувати</a>
                                <a href="#" class="btn btn-sm btn-outline-danger">Видалити</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
