@model List<ProductItemViewModel>
@{

	ViewData["Title"] = "Адмін панель - Продукти";

}

<div class="card">
	<h5 class="card-header">Продукти</h5>
	<div class="table-responsive text-nowrap">
		<table class="table">
			<thead>
				<tr>
					<th>#</th>
					<th>Image</th>
					<th>Name</th>
					<th>Description</th>
					<th>Category</th>
				</tr>
			</thead>
			<tbody class="table-border-bottom-0">
				@foreach (var item in Model)
				{
					<tr>
						<td>@item.Id</td>
						<td>
							<img class="img-thumbnail rounded object-fit-cover" style="width: 200px; height: 120px;" src="/images/200_@item.Images[0]" />
						</td>
						<td>@item.Name</td>
						<td style="max-width: 300px; overflow: hidden; white-space: nowrap; text-overflow: ellipsis;">
							@item.Description
						</td>

						<td>@item.CategoryName</td>
						<td>
							<div class="dropdown">
								<button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown"><i class="ri-more-2-line"></i></button>
								<div class="dropdown-menu">
									<a class="dropdown-item"><i class="ri-pencil-line me-1"></i> Edit</a>
									<a class="dropdown-item"><i class="ri-delete-bin-6-line me-1"></i> Delete</a>
								</div>
							</div>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>